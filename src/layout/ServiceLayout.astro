---
import Contact from "../components/Contact/Contact.astro";
import Footer from "../components/Footer.astro";
import Gallery from "../components/Gallery/Gallery.astro";
import Hero from "../components/Hero.astro";
import BasisLayout from "./BasisLayout.astro";

const { service, title } = Astro.props
---

<BasisLayout
    title={ title }
    description={ service.data.description }
    url={ "https://margap.de/services/" + service.data.name.toLowerCase()}
    image={ "https://margap.de/services" + service.data.image.src }
    alt={ service.data.alt }
>
    <Hero 
        heading={service.data.name} 
        description={service.data.description} 
        image={service.data.image} 
        alt={service.data.alt}
        button={ {"href": "#contact", "text": "Jetzt anfragen"} }
        position="bottom"
    />
    <Gallery images={service.data.gallery} descriptions={service.data.gallery_descriptions}/>
    <Contact service={service.data.name}/>
    <slot />
    <Footer />
</BasisLayout>