---
import GalleryPictures from "./GalleryPictures.astro";
const { images, descriptions } = Astro.props;
---

<main id="gallery">
    <header>
        <h1>
            Galerie
        </h1>
    </header>
    <div>
        <GalleryPictures images={images}, descriptions={descriptions} />
    </div>
</main>

<style>
    main {
        background-color: rgb(67, 88, 211);
        color: white;

        font-family: "Open Sans", sans-serif;

        display: flex;
        flex-direction: column;
        align-items: center;

        padding-bottom: 2.5em;
    }

    header {
        margin-left: 1rem;
        margin-right: 1rem;
        margin-top: 1rem;
    }

    h1 {
        font-family: "Nunito", sans-serif;
        font-size: 2.5rem;
        text-align: center;
    }

    div {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: row;
        flex-wrap: wrap;
    }
</style>