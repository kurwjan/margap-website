---
import Footer from "../components/Footer.astro";
import BasisLayout from "../layout/BasisLayout.astro";
import ServiceHero from "../components/ServiceHero.astro";

import { getCollection } from "astro:content";
import Contact from "../components/Contact/Contact.astro";
const allServices = await getCollection("services");

const hero_image = '/images/test.png';
---

<BasisLayout
        title="C.L.B"
        description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut id magna ex. In hac habitasse platea dictumst. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut id magna ex. In hac habitasse platea dictumst."
        url="https://margap.de/"
        image={ "https://margap.de" + hero_image }
        alt="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut id magna ex. In hac habitasse platea dictumst."
>
    {
        allServices.map((service, index) => (
                <ServiceHero
                        heading={service.data.name}
                        description={service.data.description}
                        image={service.data.image}
                        alt={service.data.alt}
                        position="bottom"
                        index={index}
                />
        ))
    }
    <Contact/>
    <Footer/>
</BasisLayout>